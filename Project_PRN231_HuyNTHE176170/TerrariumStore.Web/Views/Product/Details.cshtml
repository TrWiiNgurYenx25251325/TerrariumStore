                        text: 'Không thể thêm sản phẩm vào giỏ hàng',
                        icon: 'error',
                        confirmButtonText: 'Đóng',
                        confirmButtonColor: '#dc3545'
                    });
                }
            });
        }
        
        // Hàm định dạng mô tả sản phẩm
        function formatDescription(text) {
            if (!text) return "";
            
            // Tách các đoạn theo dấu chấm và tạo đoạn văn mới
            var sentences = text.split('. ');
            var paragraphs = [];
            var currentParagraph = "";
            
            sentences.forEach(function(sentence, index) {
                if (sentence.trim() === "") return;
                
                // Thêm dấu chấm lại vào cuối câu trừ câu cuối cùng
                var formattedSentence = sentence + (index < sentences.length - 1 ? '.' : '');
                
                // Nếu đoạn hiện tại đủ dài, tạo đoạn mới
                if (currentParagraph.length > 150) {
                    paragraphs.push(currentParagraph);
                    currentParagraph = formattedSentence;
                } else {
                    // Nếu đoạn hiện tại trống, bắt đầu với câu hiện tại
                    if (currentParagraph === "") {
                        currentParagraph = formattedSentence;
                    } else {
                        // Nếu không, thêm câu vào đoạn hiện tại
                        currentParagraph += ' ' + formattedSentence;
                    }
                }
            });
            
            // Thêm đoạn cuối cùng vào mảng nếu còn
            if (currentParagraph !== "") {
                paragraphs.push(currentParagraph);
            }
            
            // Gộp các đoạn lại với thẻ p
            return paragraphs.map(p => `<p>${p}</p>`).join('');
        }
    </script>
    
