@section Scripts {
    <script>
        $(document).ready(function () {
            // Kiểm tra nếu có tham số skipAuth
            const urlParams = new URLSearchParams(window.location.search);
            const skipAuth = urlParams.get('skipAuth');
            
            // Kiểm tra token và thông tin người dùng
            var token = localStorage.getItem("token");
            var role = localStorage.getItem("role");
            var username = localStorage.getItem("username");
            var userId = localStorage.getItem("userId");

            if (!token && skipAuth !== "true") {
                window.location.href = "/Home/Login";
                return;
            }

            // Hiển thị thông tin người dùng nếu đã đăng nhập
            if (token && username) {
                $("#usernameNav").text(username);
                // Hiển thị các menu chỉ dành cho người dùng đã đăng nhập
                $(".user-authenticated").show();
                // Hiển thị các phần chỉ dành cho khách hàng nếu role là Customer
                if (role === "Customer") {
                    $(".customer-only").show();
                }
            } else {
                // Ẩn các menu chỉ dành cho người dùng đã đăng nhập
                $(".user-authenticated").hide();
                // Hiển thị nút đăng nhập/đăng ký
                $("#loginRegisterButtons").show();
            }

            // Xử lý đăng xuất
            $("a[href='/Home/Logout']").click(function(e) {
                e.preventDefault();
                // Xóa token và thông tin người dùng
                localStorage.removeItem("token");
                localStorage.removeItem("userId");
                localStorage.removeItem("role");
                localStorage.removeItem("username");
                localStorage.removeItem("rememberMe");
                // Xóa cookies
                document.cookie = "remember_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
                document.cookie = "remember_username=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
                // Chuyển hướng về trang đăng nhập
                window.location.href = "/Home/Login";
            });

            // Load danh mục sản phẩm
            loadCategories();
            
            // Load sản phẩm nổi bật
            loadFeaturedProducts();
            
            // Load sản phẩm mới
            loadNewProducts();
            
            // Load số lượng sản phẩm trong giỏ hàng
            loadCartCount();
            
            // Xử lý tìm kiếm
            $("#searchBtn").click(function() {
                var searchTerm = $("#searchInput").val();
                if (searchTerm.trim() !== "") {
                    window.location.href = "/Product?searchTerm=" + encodeURIComponent(searchTerm);
                }
            });
            
            $("#searchInput").keypress(function(e) {
                if (e.which === 13) { // Enter key
                    $("#searchBtn").click();
                    e.preventDefault();
                }
            });
            
            // Xử lý click vào link thông tin cá nhân
            $("#profileLink, #orderHistoryLink").click(function(e) {
                e.preventDefault();
                alert("Chức năng đang được phát triển!");
            });
            
            // Đơn hàng của tôi không cần chặn nữa vì đã có trang
            $("#orderHistoryDropdownLink").click(function(e) {
                // Không cần chặn sự kiện mặc định vì link đã có href="/Profile/Orders"
            });
        });
        
        function loadCategories() {
            $.ajax({
                url: "https://localhost:7024/api/Category",
                method: "GET",
                headers: { "Authorization": `Bearer ${localStorage.getItem("token")}` },
                success: function(categories) {
                    // Kiểm tra xem có tham số skipAuth hay không
                    const skipAuth = new URLSearchParams(window.location.search).get('skipAuth');
                    const skipAuthParam = skipAuth === "true" ? "&skipAuth=true" : "";
                    
                    // Hiển thị danh mục trong dropdown menu
                    var dropdownHtml = `<li><a class="dropdown-item" href="/Product?skipAuth=true">Tất cả sản phẩm</a></li>`;
                    categories.forEach(function(category) {
                        dropdownHtml += `<li><a class="dropdown-item" href="/Product?categoryId=${category.id}${skipAuthParam ? skipAuthParam : '&skipAuth=true'}">
                            ${category.name}</a></li>`;
                    });
                    $("#categoryDropdown").html(dropdownHtml);
                    
                    // Hiển thị danh mục trong section
                    var categoriesHtml = '';
                    categories.forEach(function(category) {
                        categoriesHtml += `
                            <div class="col-md-4 col-sm-6 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body text-center">
                                        <i class="fas fa-leaf fa-3x text-success mb-3"></i>
                                        <h5 class="card-title">${category.name}</h5>
                                        <p class="card-text">${category.description || 'Khám phá các sản phẩm terrarium độc đáo'}</p>
                                        <a href="/Product?categoryId=${category.id}${skipAuthParam ? skipAuthParam : '&skipAuth=true'}" class="btn btn-outline-success">Xem sản phẩm</a>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    $("#categoriesContainer").html(categoriesHtml);
                },
                error: function(xhr) {
                    console.error("Error loading categories:", xhr);
                    $("#categoriesContainer").html(`
                        <div class="col-12">
                            <div class="alert alert-danger">
                                Không thể tải danh mục sản phẩm. Vui lòng thử lại sau.
                            </div>
                        </div>
                    `);
                }
            });
        }
        
        function loadFeaturedProducts() {
            $.ajax({
                url: "https://localhost:7024/api/Product",
                method: "GET",
                headers: { "Authorization": `Bearer ${localStorage.getItem("token")}` },
                success: function(products) {
                    // Lấy 4 sản phẩm đầu tiên để hiển thị như sản phẩm nổi bật
                    var featuredProducts = products.slice(0, 4);
                    var featuredHtml = '';
                    
                    featuredProducts.forEach(function(product) {
                        featuredHtml += `
                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="card h-100 product-card shadow-sm">
                                    <div class="badge bg-danger position-absolute" style="top: 0.5rem; right: 0.5rem">Hot</div>
                                    <img src="${product.imageUrl || 'https://via.placeholder.com/150'}" class="card-img-top" alt="${product.name}" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">${product.name}</h5>
                                        <p class="card-text text-truncate">${product.description || 'No description available'}</p>
                                        <p class="card-text text-danger fw-bold">${formatCurrency(product.price)}</p>
                                    </div>
                                    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">
                                        <button class="btn btn-outline-success btn-sm" onclick="viewProductDetails(${product.id})">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </button>
                                        <button class="btn btn-success btn-sm" onclick="addToCart(${product.id})">
                                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                        </button>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    
                    $("#featuredProductsContainer").html(featuredHtml);
                },
                error: function(xhr) {
                    console.error("Error loading featured products:", xhr);
                    $("#featuredProductsContainer").html(`
                        <div class="col-12">
                            <div class="alert alert-danger">
                                Không thể tải sản phẩm nổi bật. Vui lòng thử lại sau.
                            </div>
                        </div>
                    `);
                }
            });
        }
        
        function loadNewProducts() {
            $.ajax({
                url: "https://localhost:7024/api/Product?sortBy=id&ascending=false",
                method: "GET",
                headers: { "Authorization": `Bearer ${localStorage.getItem("token")}` },
                success: function(products) {
                    // Lấy 4 sản phẩm đầu tiên để hiển thị như sản phẩm mới
                    var newProducts = products.slice(0, 4);
                    var newProductsHtml = '';
                    
                    newProducts.forEach(function(product) {
                        newProductsHtml += `
                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="card h-100 product-card shadow-sm">
                                    <div class="badge bg-success position-absolute" style="top: 0.5rem; right: 0.5rem">New</div>
                                    <img src="${product.imageUrl || 'https://via.placeholder.com/150'}" class="card-img-top" alt="${product.name}" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">${product.name}</h5>
                                        <p class="card-text text-truncate">${product.description || 'No description available'}</p>
                                        <p class="card-text text-danger fw-bold">${formatCurrency(product.price)}</p>
                                    </div>
                                    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">
                                        <button class="btn btn-outline-success btn-sm" onclick="viewProductDetails(${product.id})">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </button>
                                        <button class="btn btn-success btn-sm" onclick="addToCart(${product.id})">
                                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                        </button>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    
                    $("#newProductsContainer").html(newProductsHtml);
                },
                error: function(xhr) {
                    console.error("Error loading new products:", xhr);
                    $("#newProductsContainer").html(`
                        <div class="col-12">
                            <div class="alert alert-danger">
                                Không thể tải sản phẩm mới. Vui lòng thử lại sau.
                            </div>
                        </div>
                    `);
                }
            });
        }
        
        function loadCartCount() {
            var userId = localStorage.getItem("userId");
            var token = localStorage.getItem("token");
            
            if (!userId || !token) return;
            
            $.ajax({
                url: `https://localhost:7024/api/Cart/${userId}`,
                method: "GET",
                headers: { "Authorization": `Bearer ${token}` },
                success: function(cart) {
                    var count = 0;
                    if (cart && cart.cartItems) {
                        count = cart.cartItems.length;
                    }
                    $("#cartCount").text(count);
                },
                error: function(xhr) {
                    console.error("Error loading cart count:", xhr);
                    $("#cartCount").text("0");
                }
            });
        }
        
        function viewProductDetails(productId) {
            // Thêm tham số skipAuth vào URL khi chuyển hướng đến trang chi tiết sản phẩm
            const skipAuth = new URLSearchParams(window.location.search).get('skipAuth');
            const skipAuthParam = skipAuth === "true" ? "&skipAuth=true" : "";
            window.location.href = `/Product/Details?id=${productId}${skipAuthParam}`;
        }
        
        function addToCart(productId) {
            var userId = localStorage.getItem("userId");
            var token = localStorage.getItem("token");
            
            if (!userId || !token) {
                alert("Vui lòng đăng nhập để thêm sản phẩm vào giỏ hàng!");
                return;
            }
            
            $.ajax({
                url: `https://localhost:7024/api/Cart/add`,
                method: "POST",
                headers: { 
                    "Authorization": `Bearer ${token}`,
                    "Content-Type": "application/json"
                },
                data: JSON.stringify({
                    userId: parseInt(userId),
                    productId: productId,
                    quantity: 1
                }),
                success: function(response) {
                    alert("Đã thêm sản phẩm vào giỏ hàng!");
                    loadCartCount();
                },
                error: function(xhr) {
                    console.error("Error adding to cart:", xhr);
                    alert("Không thể thêm sản phẩm vào giỏ hàng. Vui lòng thử lại sau!");
                }
            });
        }
        
        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        }
    </script>
}

